<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" 
             version="1.0">
	<persistence-unit name="eid-pki-ra-blm-PersistenceUnit">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:/DefaultDS</jta-data-source>

		<class>be.fedict.eid.pkira.blm.model.domain.Certificate</class>
		<class>be.fedict.eid.pkira.blm.model.domain.CertificateSigningContract</class>
		<class>be.fedict.eid.pkira.blm.model.domain.CertificateRevocationContract</class>		
		<class>be.fedict.eid.pkira.blm.model.domain.Registration</class>
		<class>be.fedict.eid.pkira.blm.model.domain.CertificateDomain</class>
		<class>be.fedict.eid.pkira.blm.model.domain.User</class>
		
		<properties>		
			<property name="hibernate.dialect" value="${hibernate.dialect}" />
			<property name="hibernate.hbm2ddl.auto"	value="${hibernate.hbm2ddl.auto}" />
			<property name="hibernate.connection.driver_class" value="${hibernate.connection.driver_class}" />
			<property name="hibernate.connection.username" value="${hibernate.connection.username}" />
			<property name="hibernate.connection.password" value="${hibernate.connection.password}" />
       		<property name="hibernate.connection.url" value="${hibernate.connection.url}" />
       		<property name="current_session_context_class" value="${hibernate.current_session_context_class}" />
			<property name="hibernate.show_sql" value="${hibernate.show_sql}" />
			<property name="hibernate.format_sql" value="${hibernate.format_sql}" />

			<property name="jboss.entity.manager.factory.jndi.name" value="java:/seam-poc-EntityManagerFactory" />

			<property name="cache.provider_class" value="${hibernate.cache.provider_class}" />
       		<property name="hibernate.jdbc.batch_size" value="20" />
			<property name="hibernate.cache.use_query_cache" value="${hibernate.use_query_cache}" />
			<property name="hibernate.cache.use_second_level_cache"	value="${hibernate.use_second_level_cache}" />    
		</properties>
	</persistence-unit>
</persistence>