<?xml version="1.0" encoding="UTF-8"?>
<pages xmlns="http://jboss.com/products/seam/pages"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
		no-conversation-view-id="/home.xhtml" 
		login-view-id="/login.xhtml">
	
	<page view-id="/home.xhtml">
		<end-conversation/>
	</page>

	<page view-id="/postUserAuthentication.xhtml" action="#{registrationHandler.registerUser}">
		<navigation>
			<rule if-outcome="success">
				<redirect view-id="/page/registration/requestRegistration.xhtml" />
			</rule>
		</navigation>
	</page>
	
	<page view-id="/page/certificatedomain/certificatedomain-edit.xhtml">
		<navigation from-action="#{certificateDomainHandler.saveCertificateDomain}">
			<rule if-outcome="success">
				<redirect view-id="/home.xhtml" />
			</rule>
		</navigation>
		<navigation from-action="cancel">
			<redirect view-id="/home.xhtml" />
		</navigation>
	</page>

	<page view-id="/*">
		<navigation from-action="home">
			<end-conversation before-redirect="true" />
			<redirect view-id="/home.xhtml"></redirect>
		</navigation>

		<navigation from-action="certificatedomains">
			<end-conversation before-redirect="true" />
			<redirect view-id="/page/certificatedomain/certificatedomain-edit.xhtml" />
		</navigation>
	</page>
</pages>