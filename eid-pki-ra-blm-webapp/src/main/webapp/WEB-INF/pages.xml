<?xml version="1.0" encoding="UTF-8"?>
<pages xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
	no-conversation-view-id="/home.xhtml" login-view-id="/login.xhtml">

	<!--  Home page -->
	<page view-id="/home.xhtml">
		<end-conversation />
	</page>
	
	<!-- Authentication -->
	<page view-id="/postLogin.xhtml" action="#{identity.login}">
		<navigation>
			<redirect view-id="/home.xhtml" />
		</navigation>
	</page>

	<!--  Certificate domain management -->
	<page view-id="/page/certificatedomain/certificatedomain-edit.xhtml">
		<restrict>#{s:hasRole('ADMIN_USER')}</restrict>
		<navigation from-action="#{be.fedict.eid.pkira.blm.CertificateDomainHandler.saveCertificateDomain}">
			<rule if-outcome="success">
				<redirect view-id="/page/certificatedomain/certificatedomain-list.xhtml" />
			</rule>
		</navigation>
		<navigation from-action="cancel">
			<redirect view-id="/page/certificatedomain/certificatedomain-list.xhtml" />
		</navigation>
	</page>

	<!--  Certificate domain management -->
	<page view-id="/page/certificatedomain/certificatedomain-list.xhtml">
		<restrict>#{s:hasRole('ADMIN_USER')}</restrict>
		<navigation>
			<rule if-outcome="success">
				<redirect view-id="/page/certificatedomain/certificatedomain-edit.xhtml" />
			</rule>
		</navigation>
		<navigation from-action="cancel">
			<redirect view-id="/home.xhtml" />
		</navigation>
	</page>

	<!--  Approval management -->
	<page view-id="/page/registration/bulkapproval.xhtml">
		<restrict>#{s:hasRole('ADMIN_USER')}</restrict>
	</page>

	<!--  Main menu -->
	<page view-id="/*">
		<navigation from-action="home">
			<end-conversation before-redirect="true" />
			<redirect view-id="/home.xhtml"></redirect>
		</navigation>
		
		<navigation from-action="login">
			<redirect view-id="/login.xhtml" />
		</navigation>

		<navigation from-action="certificatedomains">
			<end-conversation before-redirect="true" />
			<redirect view-id="/page/certificatedomain/certificatedomain-list.xhtml" />
		</navigation>
		
		<navigation from-action="registrations">
			<end-conversation before-redirect="true" />
			<redirect view-id="/page/registration/bulkapproval.xhtml" />
		</navigation>
	</page>
</pages>