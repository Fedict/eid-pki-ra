<schema xmlns="http://www.w3.org/2001/XMLSchema" targetNamespace="urn:be:fedict:eid:pkira:reports" xmlns:tns="urn:be:fedict:eid:pkira:reports"
	elementFormDefault="qualified" xmlns:dsig="http://www.w3.org/2000/09/xmldsig#">

	<element name="report" type="tns:reportType" />

	<complexType name="reportType">
		<sequence>
			<element name="monthlyReport" minOccurs="0" maxOccurs="unbounded" type="tns:monthlyReportType" />
		</sequence>
	</complexType>

	<complexType name="monthlyReportType">
		<sequence>
			<element name="date">
				<complexType>
					<sequence>
						<element name="year" type="int" />
						<element name="month" type="int" />
					</sequence>
				</complexType>
			</element>
			<element name="certificateDomain" type="tns:certificateDomainReportItemType" minOccurs="0"
				maxOccurs="unbounded" />
			<element name="certificateAuthority" type="tns:certificateAuthorityReportItemType" minOccurs="0"
				maxOccurs="unbounded" />
		</sequence>
	</complexType>

	<complexType name="certificateAuthorityReportItemType">
		<sequence>
			<element name="name" type="string" />
			<element name="sign" type="tns:successFailureCountType" />
			<element name="revoke" type="tns:successFailureCountType" />
			<element name="total" type="tns:successFailureCountType" />
		</sequence>
	</complexType>

	<complexType name="certificateDomainReportItemType">
		<sequence>
			<element name="name" type="string" />
			<element name="sign" type="tns:successFailureCountType" />
		</sequence>
	</complexType>

	<complexType name="successFailureCountType">
		<sequence>
			<element name="success" type="nonNegativeInteger" />
			<element name="failure" type="nonNegativeInteger" />
			<element name="total" type="nonNegativeInteger" />
		</sequence>
	</complexType>
</schema>