<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
	login-required="true">
	
	<restrict>#{s:hasRole('REGISTERED_USER')}</restrict>

	<navigation from-action="#{certificateHandler.showDetail(cer)}">
		<rule if-outcome="certificateDetail">
			<redirect view-id="/page/certificates/certificate_detail.xhtml" />
		</rule>
	</navigation>
	
	<navigation from-action="#{certificateHandler.prepareRevocation(cer.serialNumber, cer.issuer)}">
		<rule if-outcome="revokeContract">
			<redirect view-id="/page/contract/revocationContract.xhtml" />
		</rule>
	</navigation>
	
</page>