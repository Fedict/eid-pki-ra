<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	<persistence-unit name="PersistenceUnitTest">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<class>be.fedict.eid.pkira.blm.model.domain.Certificate</class>
		<class>be.fedict.eid.pkira.blm.model.domain.CertificateSigningContract</class>
		<class>be.fedict.eid.pkira.blm.model.domain.CertificateRevocationContract</class>		
		<class>be.fedict.eid.pkira.blm.model.domain.Registration</class>
		<class>be.fedict.eid.pkira.blm.model.domain.CertificateDomain</class>
		<class>be.fedict.eid.pkira.blm.model.domain.User</class>
		<class>be.fedict.eid.pkira.blm.model.config.ConfigurationEntry</class>
		
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<property name="hibernate.connection.driver_class" value="org.hsqldb.jdbcDriver" />
			<property name="hibernate.connection.username" value="sa" />
			<property name="hibernate.connection.password" value="" />
			<property name="hibernate.connection.url" value="jdbc:hsqldb:mem:testdb" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>